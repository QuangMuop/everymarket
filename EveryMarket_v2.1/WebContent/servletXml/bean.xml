<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 포워딩 컨트롤러 -->
	<bean id="forwardingController" class="erathia.controller.ForwardingController"/>
	
	<!-- 멤버 컨트롤러 -->
	<bean id="memberController" class="erathia.controller.MemberController">
		<property name="daoM" ref="memberDao"/>
	</bean>
	
	<bean id="memberDao" class="erathia.dao.MemberDao">
		<property name="ibatisTemplate" ref="ibatisTemplate"/>
	</bean>
	
</beans>